#! /bin/bash

sudo yum update

sudo yum install sshpass   #ansible -m ping all --ask-pass(to connect onetime ssh password)

sudo su -

ansible --version

echo "ansible not installed"

yum install https://dl.fedoraproject.org/pub/epel/epel-release-latest-8.noarch.rpm

yum install ansible

ansible --version

echo "ansible installation is completed"
